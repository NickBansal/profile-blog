<% include ../partials/header %>

<div class="container" id="bots">
    
    <div class="text-center">
        <h1><%= blog.title %></h1>
    </div>
    <br />
    <div class="container">
        <div class="img-thumbnail">
            <img class="img-responsive" id="fut" src="<%= blog.image %>">
            <div class="row buttons">
                <% if (currentUser) { %>
                    <div class="col-md-6 col-sm-12 text-left">
                        <a class="btn btn-light border" href="/blogs/<%= blog._id %>/edit" role="button">EDIT</a>
                    </div>
                    <div class="col-md-6 col-sm-12 text-right">
                        <form action="/blogs/<%= blog._id %>?_method=DELETE" method="POST">
                            <button class="btn btn-light btn-warning border">DELETE</button>
                        </form>
                    </div>
                <% } %>
            </div>
             <div class="container text-center text">
                <%= blog.body %>    
            </div>
        </div>
    </div>
    <br />
    <div class="text">  
        <div class="text-center">
            <strong><em><%= moment(blog.created).fromNow() %></em></strong>
        </div>
    </div>
    <hr>

    
    
</div>


<% include ../partials/footer %>