<% include ../partials/header %>

<div class="container boxer">
    <form action="/blogs" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="blog[title]" placeholder="Title">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" name="blog[image]" placeholder="Image URL">
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea class="form-control" type="text" name="blog[body]" placeholder="Please enter your content..." rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary centered">Submit</button>
    </form>
</div>





