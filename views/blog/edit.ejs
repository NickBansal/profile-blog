<% include ../partials/header %>

<div class="container boxer">
    <form action="/blogs/<%= editBlog._id %>?_method=PUT" method="POST">
        <div class="form-group">
            <label>Title</label>
            <input class="form-control" type="text" name="blog[title]" value="<%= editBlog.title %>">
        </div>
        <div class="form-group">
            <label>Image</label>
            <input class="form-control" type="text" name="blog[image]" value="<%= editBlog.image %>">
        </div>
        <div class="form-group">
            <label>Author</label>
            <input class="form-control" type="text" name="blog[author]" value="<%= editBlog.author %>">
        </div>
        <div class="form-group">
            <label>Body</label>
            <textarea class="form-control" type="text" name="blog[body]" rows="5"><%= editBlog.body %></textarea>
        </div>
        <button type="submit" class="btn btn-primary centered">Submit</button>
    </form>
</div>





<% include ../partials/footer %>