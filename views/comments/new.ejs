<% include ../partials/header %>

<div class="container boxer">
    <h3 class="text-center">Add new comments to: <%= blog.title %></h3>
    <form action="/blogs/<%= blog._id %>/comments" method="POST">
        <div class="form-group">
            <label>Name</label>
            <input class="form-control" type="text" name="comment[author]" placeholder="Author">
        </div>
        <div class="form-group">
            <label>Comment</label>
            <textarea class="form-control" type="text" name="comment[text]" placeholder="Please enter your comment..." rows="5"></textarea>
        </div>
        <button type="submit" class="btn btn-primary centered">Submit</button>
    </form>
</div>





<% include ../partials/footer %>